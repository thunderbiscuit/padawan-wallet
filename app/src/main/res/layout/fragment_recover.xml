<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg0soft"
    tools:context=".intro.WalletRecoveryFragment">

    <TextView
        android:id="@+id/app_name_wallet_recover"
        android:layout_width="wrap_content"
        android:layout_height="63dp"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/share_tech_mono"
        android:text="@string/padawan"
        android:textColor="@color/bright_green"
        android:textSize="58sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/tagline_wallet_recover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_sans_light_italic"
        android:text="@string/elevator_pitch"
        android:textColor="@color/fg1"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.64"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_name_wallet_recover" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/buttonRecoverWallet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tagline_wallet_recover">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/mnemonicword1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="24dp"
                android:backgroundTint="@color/bg4"
                android:ems="10"
                android:fontFamily="@font/nunito_sans"
                android:gravity="center"
                android:hint="@string/word1"
                android:inputType="text"
                android:nextFocusDown="@id/mnemonicword2"
                android:textColor="@color/fg1"
                android:textColorHint="@color/bg4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/mnemonicword2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:backgroundTint="@color/bg4"
                android:ems="10"
                android:fontFamily="@font/nunito_sans"
                android:gravity="center"
                android:hint="@string/word2"
                android:inputType="text"
                android:nextFocusDown="@id/mnemonicword3"
                android:textColor="@color/fg1"
                android:textColorHint="@color/bg4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mnemonicword1" />

            <EditText
                android:id="@+id/mnemonicword3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:width="170dp"
                android:backgroundTint="@color/bg4"
                android:ems="10"
                android:fontFamily="@font/nunito_sans"
                android:gravity="center"
                android:hint="@string/word3"
                android:inputType="text"
                android:nextFocusDown="@id/mnemonicword4"
                android:textColor="@color/fg1"
                android:textColorHint="@color/bg4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mnemonicword2" />

            <EditText
                android:id="@+id/mnemonicword4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:backgroundTint="@color/bg4"
                android:ems="10"
                android:fontFamily="@font/nunito_sans"
                android:gravity="center"
                android:hint="@string/word4"
                android:inputType="text"
                android:nextFocusDown="@id/mnemonicword5"
                android:textColor="@color/fg1"
                android:textColorHint="@color/bg4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mnemonicword3" />

            <EditText
                android:id="@+id/mnemonicword5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:backgroundTint="@color/bg4"
                android:ems="10"
                android:fontFamily="@font/nunito_sans"
                android:gravity="center"
                android:hint="@string/word5"
                android:inputType="text"
                android:nextFocusDown="@id/mnemonicword6"
                android:textColor="@color/fg1"
                android:textColorHint="@color/bg4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mnemonicword4" />

            <EditText
                android:id="@+id/mnemonicword6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:backgroundTint="@color/bg4"
                android:ems="10"
                android:fontFamily="@font/nunito_sans"
                android:gravity="center"
                android:hint="@string/word6"
                android:inputType="text"
                android:nextFocusDown="@id/mnemonicword7"
                android:textColor="@color/fg1"
                android:textColorHint="@color/bg4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mnemonicword5" />

            <EditText
                android:id="@+id/mnemonicword7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:backgroundTint="@color/bg4"
                android:ems="10"
                android:fontFamily="@font/nunito_sans"
                android:gravity="center"
                android:hint="@string/word7"
                android:inputType="text"
                android:nextFocusDown="@id/mnemonicword8"
                android:textColor="@color/fg1"
                android:textColorHint="@color/bg4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mnemonicword6" />

            <EditText
                android:id="@+id/mnemonicword8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:backgroundTint="@color/bg4"
                android:ems="10"
                android:fontFamily="@font/nunito_sans"
                android:gravity="center"
                android:hint="@string/word8"
                android:inputType="text"
                android:nextFocusDown="@id/mnemonicword9"
                android:nextFocusForward="@id/mnemonicword5"
                android:textColor="@color/fg1"
                android:textColorHint="@color/bg4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mnemonicword7" />

            <EditText
                android:id="@+id/mnemonicword9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:backgroundTint="@color/bg4"
                android:ems="10"
                android:fontFamily="@font/nunito_sans"
                android:gravity="center"
                android:hint="@string/word9"
                android:inputType="text"
                android:nextFocusDown="@id/mnemonicword10"
                android:textColor="@color/fg1"
                android:textColorHint="@color/bg4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mnemonicword8" />

            <EditText
                android:id="@+id/mnemonicword10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:backgroundTint="@color/bg4"
                android:ems="10"
                android:fontFamily="@font/nunito_sans"
                android:gravity="center"
                android:hint="@string/word10"
                android:inputType="text"
                android:nextFocusDown="@id/mnemonicword11"
                android:textColor="@color/fg1"
                android:textColorHint="@color/bg4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mnemonicword9" />

            <EditText
                android:id="@+id/mnemonicword11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:backgroundTint="@color/bg4"
                android:ems="10"
                android:fontFamily="@font/nunito_sans"
                android:gravity="center"
                android:hint="@string/word11"
                android:inputType="text"
                android:nextFocusDown="@id/mnemonicword12"
                android:textColor="@color/fg1"
                android:textColorHint="@color/bg4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mnemonicword11" />

            <EditText
                android:id="@+id/mnemonicword12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:backgroundTint="@color/bg4"
                android:ems="10"
                android:fontFamily="@font/nunito_sans"
                android:gravity="center"
                android:hint="@string/word12"
                android:inputType="text"
                android:textColor="@color/fg1"
                android:textColorHint="@color/bg4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mnemonicword11" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/buttonRecoverWallet"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/green"
        android:fontFamily="@font/nunito_sans"
        android:text="Recover Wallet"
        android:textAllCaps="false"
        android:textColor="@color/fg1"
        android:textSize="18sp"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.70" />


</androidx.constraintlayout.widget.ConstraintLayout>
